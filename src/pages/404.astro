---
import { ui, defaultLang, getLangFromUrl } from '../i18n/ui';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const lang = getLangFromUrl(Astro.url);
const t = ui[lang] || ui[defaultLang];
---

<html lang={lang}>
	<head>
		<BaseHead title={`${t['404.title']} | ${t['site.title']}`} description={t['404.description']} />
	</head>
	<body>
		<Header lang={lang} />
		<main>
			<h1>{t['404.title']}</h1>
			<p>{t['404.message']}</p>
			<a href={`/${lang}/`}>{t['404.link']}</a>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		text-align: center;
		padding: 4rem 1.5em;
	}
	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
	}
	p {
		font-size: 1.2rem;
		margin-bottom: 2rem;
	}
	a {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border: 1px solid var(--green);
		border-radius: 8px;
		color: var(--green);
		text-decoration: none;
		font-weight: 600;
		transition: background-color 0.2s ease, color 0.2s ease;
	}
	a:hover {
		background-color: var(--green);
		color: #000;
	}
</style>